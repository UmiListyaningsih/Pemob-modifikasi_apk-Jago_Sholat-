<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_tasbih_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/colorBackground"
    tools:context=".ui.tasbih.TasbihFragment">

    <ImageButton
        android:id="@+id/btn_tasbih_reset"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_baseline_refresh_24px"
        android:contentDescription="Reset" />

    <TextView
        android:id="@+id/tv_tasbih_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="0"
        android:textSize="120sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tasbih_count"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Sentuh di mana saja untuk menghitung"
        android:textSize="16sp" />

</RelativeLayout>